@model IEnumerable<MvcCoreMultiplesBBDD.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpleadoNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptNum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpleadoNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptNum)
            </td>
            <td>
                <a asp-controller="Empleados" asp-action="Details" asp-route-empleadoNum="@item.EmpleadoNum" class="btn btn-primary">Details</a>
                <a asp-controller="Empleados" asp-action="Delete" asp-route-empleadoNum="@item.EmpleadoNum" class="btn btn-danger">Delete</a>
                <a asp-controller="Empleados" asp-action="UpdateEmpleado" asp-route-empleadoNum="@item.EmpleadoNum" class="btn btn-info">Update</a>
            </td>
        </tr>
}
    </tbody>
</table>
